<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <include layout="@layout/include_counselor_head" />


    <View
        style="@style/line_width_match"/>

    <View
        style="@style/item_space_width_match"/>

    <View
        style="@style/line_width_match"/>



    <RelativeLayout
        android:id="@+id/relAboutUs"
        style="@style/rel_my_fragment_item"
        >
        <TextView
            style="@style/text_my_fragment_item"
            android:text="关于我们" />
        <ImageView
            style="@style/image_my_fragment_next"/>
    </RelativeLayout>
    <View
        android:layout_marginLeft="20dp"
        style="@style/line_width_match"/>


    <RelativeLayout
        android:id="@+id/relContact"
        style="@style/rel_my_fragment_item"
        >
        <TextView
            style="@style/text_my_fragment_item"
            android:text="联系我们" />
        <ImageView
            style="@style/image_my_fragment_next"/>
    </RelativeLayout>
    <View
        android:layout_marginLeft="20dp"
        style="@style/line_width_match"/>



    <RelativeLayout
        android:id="@+id/relCheck"
        style="@style/rel_my_fragment_item"
        >
        <TextView
            style="@style/text_my_fragment_item"
            android:text="检查版本更新" />
        <ImageView
            style="@style/image_my_fragment_next"/>
    </RelativeLayout>
    <View
        android:layout_marginLeft="20dp"
        style="@style/line_width_match"/>

    <RelativeLayout
        android:id="@+id/relShare"
        style="@style/rel_my_fragment_item"
        android:visibility="gone">
        <TextView
            style="@style/text_my_fragment_item"
            android:text="分享给朋友" />
        <ImageView
            style="@style/image_my_fragment_next"/>
    </RelativeLayout>
    <View
        style="@style/line_width_match"/>


</LinearLayout>