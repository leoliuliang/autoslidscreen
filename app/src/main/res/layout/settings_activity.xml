<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7f7f7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:background="@drawable/selector_onclick"
            android:src="@mipmap/back_01"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:text="设置时间"
            android:padding="10dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="随机时间："
            android:textColor="#676767"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tvFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="从"
            android:textSize="14sp"
            android:textColor="#676767"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv1"
            />
        <EditText
            android:id="@+id/etFrom"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_toRightOf="@+id/tvFrom"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:inputType="number"
            android:textColor="#676767"
            android:gravity="center"
            android:text="3"
            />
        <TextView
            android:id="@+id/tvTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到"
            android:textSize="14sp"
            android:textColor="#676767"
            android:layout_toRightOf="@+id/etFrom"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/etTo"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_toRightOf="@+id/tvTo"
            android:textColor="#676767"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:inputType="number"
            android:gravity="center"
            android:text="12"
            />

        <CheckBox
            android:id="@+id/cbRandom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="true"
            android:buttonTint="@android:color/holo_orange_light"/>
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_marginTop="20dp"
        style="@style/line_width_match"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="固定时间："
            android:textColor="#676767"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/etFixed"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_toRightOf="@+id/tv2"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:inputType="number"
            android:textColor="#676767"
            android:gravity="center"
            android:text="10"
            />

        <CheckBox
            android:id="@+id/cbFixed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:buttonTint="@android:color/holo_orange_light"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvSure"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textColor="#676767"
        android:background="@drawable/textview_onclick"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="55dp"

        android:text="确定" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textColor="#676767"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="55dp"

        android:text="提示：设置自动滑屏的间隔时间，以秒为单位" />

</LinearLayout>